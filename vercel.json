{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "outputDirectory": ".next-build",
  "regions": ["iad1"],
  "functions": {
    "pages/api/**/*.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 60
    },
    "pages/api/upscale.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 300
    },
    "pages/api/tools/generate-image.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 300
    },
    "pages/api/tools/compress-video.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 300
    },
    "pages/api/tools/transcribe-audio.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 300
    },
    "pages/api/convert/**/*.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 180
    },
    "pages/api/pdf/**/*.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 180
    },
    "pages/api/tools/**/*.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 180
    },
    "pages/api/files/**/*.js": {
      "includeFiles": "node_modules/ffmpeg-static/**",
      "maxDuration": 120
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/_next/static/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
